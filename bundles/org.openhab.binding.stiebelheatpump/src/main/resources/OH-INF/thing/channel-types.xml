		<label>Defrost mode AA HE Setting</label>
		<state min="1" max="5" step="1" />
	</channel-type>
	<channel-type id="exhaustFanSpeed" advanced="true">
		<item-type>Number</item-type>
		<label>Exhaust fan speed Setting</label>
		<state min="10" max="100" step="1" pattern="%d %%" />
	</channel-type>
	<channel-type id="fanStageSetting" advanced="true">
		<item-type>Number</item-type>
		<label>Fan stage Setting</label>
		<state min="0" max="3" step="1" />
	</channel-type>
	<channel-type id="fanStageSettingAir" advanced="true">
		<item-type>Number</item-type>
		<label>Fan stage air Setting</label>
		<state min="60" max="280" step="1" pattern="%d m^3/h" />
	</channel-type>
	<channel-type id="ventilationTimeUnscheduled" advanced="true">
