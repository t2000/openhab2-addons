		<state min="0" max="10" step="0.1" pattern="%.1f K" />
	</channel-type>
	<channel-type id="hysteresisHeatingNarrow" advanced="true">
		<item-type>Number</item-type>
		<label>Hysteresis heating Setting in [K]</label>
		<state min="0" max="5" step="0.1" pattern="%.1f K" />
	</channel-type>
	<channel-type id="hysteresisHeatingSwitching" advanced="true">
		<item-type>Number</item-type>
