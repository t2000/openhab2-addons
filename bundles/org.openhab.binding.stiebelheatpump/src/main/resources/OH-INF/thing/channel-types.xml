		<item-type>Number</item-type>
		<label>Pasteurization Interval [K/day]</label>
		<state min="1" max="30" step="1.0" pattern="%d K/day" />
	</channel-type>
	<channel-type id="maxDurationDHWLoading" advanced="true">
		<item-type>Number</item-type>
		<label>Max Duration DHW Loading [h]</label>
		<state min="6" max="12" step="1.0" pattern="%d h" />
