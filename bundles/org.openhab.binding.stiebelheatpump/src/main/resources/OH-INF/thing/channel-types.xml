	<channel-type id="minSetHeatingCircuitTemperature" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Min set heating circuit temperature Setting in [°C]</label>
		<state min="5" max="40" step="0.1" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="temperaturLimitEvaporator" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Temperature limit evaporator Setting in [°C]</label>
		<state min="10" max="30" step="0.1" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="maxEvaporatorDefrostTime" advanced="true">
