		<state min="1" max="5" step="0.1" pattern="%.1f %unit%"/>
	</channel-type>
	<channel-type id="lowEndPointHeating" advanced="true">
		<item-type>Number</item-type>
		<label>Low end point heating Setting in [K]</label>
		<state min="1" max="20" step="0.1" pattern="%.1f K" />
	</channel-type>
	<channel-type id="roomInfluenceHeating" advanced="true">
		<item-type>Number</item-type>
		<label>Room influence heating</label>
		<description>Room influence heating of heat circuit.</description>
		<state min="1" max="10" step="0.1" />
	</channel-type>
	<channel-type id="temperatureCaptureReturnFlow" advanced="true">
		<item-type>Number</item-type>
		<label>Temperature capture return flow</label>
		<state min="1" max="100" step="1.0" pattern="%d %%" />
	</channel-type>
	<channel-type id="maxSetHeatingCircuitTemperature" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Max set heating circuit temperature Setting in [°C]</label>
		<state min="20" max="65" step="0.1" pattern="%.1f %unit%" />
