		<state min="0" max="240" step="1.0" pattern="%d min" />
	</channel-type>
	<channel-type id="limitForElectricalReheating" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Limit for Electrical Re-heating Setting in [°C]</label>
		<state min="-10" max="10" step="1.0" pattern="%d %unit%" />
