		<state min="1" max="100" step="0.1" pattern="%.1f sec" />
	</channel-type>
	<channel-type id="mixerTimeInterval" advanced="true">
		<item-type>Number</item-type>
		<label>Mixer time interval Setting</label>
		<state min="1" max="10" step="0.1" pattern="%.1f K/day" />
	</channel-type>
	<channel-type id="startupHysteresisDHWTemperature" advanced="true">
		<item-type>Number</item-type>
