		<state min="1" max="5" step="1.0" />
	</channel-type>
	<channel-type id="switchingValueIntegralPortionHeating" advanced="true">
		<item-type>Number</item-type>
		<label>Switching value for integral portion heating Setting</label>
		<state min="1" max="999" step="1.0" />
	</channel-type>
	<channel-type id="outputElectricalHeatingStage" advanced="true">
		<item-type>Number:Power</item-type>
		<label>Switching value for integral portion heating Setting</label>
		<state min="0" max="10" step="1" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="minStartupCycles" advanced="true">
		<item-type>Number</item-type>
		<label>Minimum startup cycles Setting in [per/day]</label>
		<state min="1" max="24" step="1" pattern="%d per/day" />
	</channel-type>
	<channel-type id="maxStartupCycles" advanced="true">
		<item-type>Number</item-type>
		<label>Max startup cycles Setting in [per/day]</label>
		<state min="1" max="288" step="1" pattern="%d per/day" />
	</channel-type>
	<channel-type id="outsideTemperatureMinHeatingCycles" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Outside temperature min heating cycles Setting in [°C]</label>
		<state min="0" max="20" step="0.1" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="outsideTemperatureMaxHeatingCycles" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Outside temperature max heating cycles Setting in [°C]</label>
		<state min="0" max="25" step="0.1" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="suppressTemperatureCaptureDuringPumpStart" advanced="true">
		<item-type>Number</item-type>
		<label>Suppress temperature capture during pump start Setting in [sec]</label>
		<state min="0" max="120" step="1" pattern="%d sec" />
	</channel-type>
	<channel-type id="timeSetting" advanced="true">
		<item-type>String</item-type>
		<label>Time settings Setting in [hh:mm]</label>
		<state min="0" max="2359" pattern="%s hh:mm" />
	</channel-type>
	<channel-type id="switchSetting" advanced="true">
		<item-type>Switch</item-type>
		<label>Enabling switch</label>
		<state min="0" max="1" />
	</channel-type>
	<channel-type id="contactStatus">
		<item-type>Contact</item-type>
		<label>Status Contact</label>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="timeAp0Setting" advanced="true">
		<item-type>Number</item-type>
		<label>Time settings in [h]</label>
		<state min="0" max="2388" pattern="%.1f h" />
	</channel-type>
    <channel-type id="timeAp0" advanced="true">
        <item-type>Number</item-type>
        <label>Time in [h]</label>
        <state min="0" max="2388" pattern="%.1f h" readOnly="true"/>
    </channel-type>	
	<channel-type id="restartBeforeSetbackEnd" advanced="true">
		<item-type>Number</item-type>
		<label>Time settings Setting in [min]</label>
		<state min="0" max="300" step="1" pattern="%d min" />
	</channel-type>
