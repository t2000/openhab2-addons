	<channel-type id="maxFlowTemperatureDHWMode" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>Max Flow Temperature DHW Mode</label>
		<state min="10" max="75" step="0.1" pattern="%.1f %unit%" />
	</channel-type>
	<channel-type id="noOfErrors">
		<item-type>Number</item-type>
		<label>Number of Errors</label>
		<description>Number of Errors</description>
		<state pattern="%d #ERR" readOnly="true" />
	</channel-type>
	<channel-type id="errorCode" advanced="true">
		<item-type>Number</item-type>
		<label>Error code</label>
		<description>Error code</description>
		<state pattern="F%s" readOnly="true" />
	</channel-type>
