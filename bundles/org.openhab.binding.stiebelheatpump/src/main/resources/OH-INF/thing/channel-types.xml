		<state min="0" max="1000" step="1" pattern="%d min" />
	</channel-type>
	<channel-type id="operatingModePassiveCooling" advanced="true">
		<item-type>Number</item-type>
		<label>Operating mode passive cooling</label>
		<state min="0" max="2" step="1" />
	</channel-type>
	<channel-type id="stoveFireplaceOperation" advanced="true">
		<item-type>Number</item-type>
		<label>Stove fireplace operation</label>
		<state min="0" max="4" step="1" />
