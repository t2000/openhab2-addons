		<item-type>Number</item-type>
		<label>Year</label>
		<description>Year of the current time.</description>
		<state min="0" max="99" step="1" pattern="%d YY" readOnly="true" />
	</channel-type>
	<channel-type id="month" advanced="true">
		<item-type>Number</item-type>
		<label>Month</label>
		<description>Month of the current time.</description>
		<state min="1" max="12" step="1" pattern="%d MM" readOnly="true" />
	</channel-type>
